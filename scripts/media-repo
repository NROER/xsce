USB_DRIVES=`mount | grep sd | awk '{print $3}'`

	if [ -e $USB_DRIVES ]
	then
	    if ! [ -e $USB_DRIVES/xs-repo ]
	    then
                mkdir -p $USB_DRIVES/xs-repo
	    fi
	    mount --bind $USB_DRIVES/xs-repo /var/cache/yum
	fi





USB_DRIVES=`mount | grep sd | awk '{print $3}'`

if [ -e $USB_DRIVES ]
then
    if ! [ -e $USB_DRIVES/xs-repo ]
    then
	mkdir -p $USB_DRIVES/xs-repo
    fi
    mount --bind $USB_DRIVES/xs-repo /var/cache/yum
fi

if [ -e $USB_DRIVES/xs-repo ]
then
    cp /usr/share/xs-config/cfg/etc/yum.repos.d/media.repo $USB_DRIVES/
    sed -i -e 's&baseurl=file:///&baseurl=file:///$USB_DRIVES/xs-repo&' $USB_DRIVES/media.repo
    cp $USB_DRIVES/media.repo /etc/yum.repos.d/
    createrepo $USB_DRIVES/xs-repo/
    echo "off line yum repo configured"
fi



