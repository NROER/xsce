#
# School server 5 DHCP Server Configuration file.
#
ddns-update-style interim;
#ignore client-updates;

option domain-name "@@BASEDNSNAME@@";
option domain-name-servers      172.18.0.1;
option ntp-servers		172.18.0.1;

subnet 172.18.0.0 netmask 255.255.254.0 {
	option routers			172.18.0.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.1.255;
	range                           172.18.0.2 172.18.0.254;
#  As this subnet is wired, these lease times are on the long side
	default-lease-time 	10800;
	max-lease-time 		21600;
}

subnet 172.18.42.0 netmask 255.255.254.0 {
	option routers			172.18.42.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.43.255;
	range                           172.18.42.2 172.18.43.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.44.0 netmask 255.255.254.0 {
	option routers			172.18.44.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.45.255;
	range                           172.18.44.2 172.18.45.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.46.0 netmask 255.255.254.0 {
	option routers			172.18.46.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.47.255;
	range                           172.18.46.2 172.18.47.254;
	default-lease-time	600;
	max-lease-time 		1800;
}
