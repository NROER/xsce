function ntop()
{
	case "$1" in
    "yes")
        yum -y install  ntop 2>&1 | tee -a $LOG
        if [ $? -ne 0 ] ; then
            echo "\n\nYum returned an error\n\n" | tee -a $LOG
            exit $YUMERROR
        fi
        touch $SETUPSTATEDIR/ntop
        ;;
    "no")
        rm $SETUPSTATEDIR/ntop
        ;;
    esac
}


