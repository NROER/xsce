#
# School server 3 DHCP Server Configuration file.
#
ddns-update-style interim;
#ignore client-updates;

option domain-name "@@BASEDNSNAME@@";
option domain-name-servers      172.18.0.1;
option ntp-servers		172.18.0.1;

subnet 172.18.0.0 netmask 255.255.254.0 {
	option routers			172.18.0.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.1.255;
	range                           172.18.0.2 172.18.0.254;
#  As this subnet is wired, these lease times are on the long side
	default-lease-time 	10800;
	max-lease-time 		21600;
}

subnet 172.18.26.0 netmask 255.255.254.0 {
	option routers			172.18.26.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.27.255;
	range                           172.18.26.2 172.18.27.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.28.0 netmask 255.255.254.0 {
	option routers			172.18.28.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.29.255;
	range                           172.18.28.2 172.18.29.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.30.0 netmask 255.255.254.0 {
	option routers			172.18.30.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.31.255;
	range                           172.18.30.2 172.18.31.254;
	default-lease-time	600;
	max-lease-time 		1800;
}
