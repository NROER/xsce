#!/bin/sh
. /etc/xsce/xsce.env

# enable this install config to be tracked
if [ ! -f /etc/xsce/uuid ]; then
  uuidgen > /etc/xsce/uuid
fi
UUID=`cat /etc/xsce/uuid`

cd $XSCE_DIR

# get current version
BRANCH=`git rev-parse --abbrev-ref HEAD`
COMMIT=`git rev-parse --verify HEAD`

if [ -d /usr/lib64/php ]
then
  PHPLIB_DIR=/usr/lib64/php
else
  PHPLIB_DIR=/usr/lib/php
fi

if [ -f /proc/device-tree/mfg-data/MN ]
then
  XO_VERSION=`cat /proc/device-tree/mfg-data/MN`
else
  XO_VERSION="none"
fi

if [ -f /.preload ]
then
  PRELOAD="True"
else
  PRELOAD="False"
fi

ping -c1 8.8.8.8 > /dev/null 2>&1
if [ "$?" == 0 ]; then
  HAS_INTERNET_CONNECTION="True"
else
  HAS_INTERNET_CONNECTION="False"
fi


cat <<EOF
{"phplib_dir"             : "$PHPLIB_DIR",
"xsce_branch"             : "$BRANCH",
"xsce_commit"             : "$COMMIT",
"xsce_uuid"               : "$UUID",
"xo_model"                : "$XO_VERSION",
"has_internet_connection" : "$HAS_INTERNET_CONNECTION",
"xsce_preload"            : "$PRELOAD"}
EOF
