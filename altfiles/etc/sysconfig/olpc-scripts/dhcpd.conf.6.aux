#
# School server 6 DHCP Server Configuration file.
#
ddns-update-style interim;
#ignore client-updates;

option domain-name "random.xs.laptop.org";
option domain-name-servers      172.18.0.1;
option ntp-servers		172.18.0.1;

subnet 172.18.48.0 netmask 255.255.254.0 {
	option routers			172.18.48.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.49.255;
	range                           172.18.48.2 172.18.49.254;
#  As this subnet is wired, these lease times are on the long side
	default-lease-time 	21600;
	max-lease-time 		43200;
}

subnet 172.18.50.0 netmask 255.255.254.0 {
	option routers			172.18.50.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.51.255;
	range                           172.18.50.2 172.18.51.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.52.0 netmask 255.255.254.0 {
	option routers			172.18.52.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.53.255;
	range                           172.18.52.2 172.18.53.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.54.0 netmask 255.255.254.0 {
	option routers			172.18.54.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.55.255;
	range                           172.18.54.2 172.18.55.254;
	default-lease-time	600;
	max-lease-time 		1800;
}
