#
# School server 2 DHCP Server Configuration file.
#
ddns-update-style interim;
#ignore client-updates;

option domain-name "random.xs.laptop.org";
option domain-name-servers      172.18.0.1;
option ntp-servers		172.18.0.1;

subnet 172.18.16.0 netmask 255.255.254.0 {
	option routers			172.18.16.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.17.255;
	range                           172.18.16.2 172.18.17.254;
#  As this subnet is wired, these lease times are on the long side
	default-lease-time 	21600;
	max-lease-time 		43200;
}

subnet 172.18.18.0 netmask 255.255.254.0 {
	option routers			172.18.18.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.19.255;
	range                           172.18.18.2 172.18.19.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.20.0 netmask 255.255.254.0 {
	option routers			172.18.20.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.21.255;
	range                           172.18.20.2 172.18.21.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.22.0 netmask 255.255.254.0 {
	option routers			172.18.22.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.23.255;
	range                           172.18.22.2 172.18.23.254;
	default-lease-time	600;
	max-lease-time 		1800;
}
