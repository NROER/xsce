#
# School server 4 DHCP Server Configuration file.
#
ddns-update-style interim;
#ignore client-updates;

option domain-name "@@BASEDNSNAME@@";
option domain-name-servers      172.18.0.1;
option ntp-servers		172.18.0.1;

subnet 172.18.0.0 netmask 255.255.254.0 {
	option routers			172.18.0.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.1.255;
	range                           172.18.0.2 172.18.0.254;
#  As this subnet is wired, these lease times are on the long side
	default-lease-time 	10800;
	max-lease-time 		21600;
}

subnet 172.18.34.0 netmask 255.255.254.0 {
	option routers			172.18.34.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.35.255;
	range                           172.18.34.2 172.18.35.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.36.0 netmask 255.255.254.0 {
	option routers			172.18.36.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.37.255;
	range                           172.18.36.2 172.18.37.254;
	default-lease-time	600;
	max-lease-time 		1800;
}

subnet 172.18.38.0 netmask 255.255.254.0 {
	option routers			172.18.38.1;
	option subnet-mask		255.255.254.0;
	option broadcast-address	172.18.39.255;
	range                           172.18.38.2 172.18.39.254;
	default-lease-time	600;
	max-lease-time 		1800;
}
