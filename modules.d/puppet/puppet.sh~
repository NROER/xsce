function puppet()
{
	case "$1" in
    "yes")
        $YUM_CMD  puppet 2>&1 | tee -a $LOG
        if [ $? -ne 0 ] ; then
            echo "\n\nYum returned an error\n\n" | tee -a $LOG
            exit $YUMERROR
        fi
        touch $SETUPSTATEDIR/puppet
        #execute the setup script
        ;;
    "no")
        rm $SETUPSTATEDIR/puppet
        ;;
    esac
}


